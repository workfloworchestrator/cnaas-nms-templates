system {
    login {
        user admin {
            uid 2003;
            class super-user;
            authentication {
                encrypted-password "{{ TEMPLATE_SECRET_ADMIN_HASH }}"; ## SECRET-DATA
            }
        }
    }
    root-authentication {
        encrypted-password "{{ TEMPLATE_SECRET_ADMIN_HASH }}"; ## SECRET-DATA
    }
    services {
        ssh {
            root-login deny-password;
            protocol-version v2;
        }
        netconf {
            ssh;
        }
    }
}
interfaces {
    irb {
        unit 0 {
            family inet {
                dhcp;
            }
        }
    }
}

